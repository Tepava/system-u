<odoo>
  <data>
     <record model="ir.ui.view" id="background_them_settings_view_form">
        <field name="name">background.theme.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="69"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Customisation" string="Customisation" data-key="pe_background_themes">
                    <div id="CustomisationSettings">
                        <h2>Customisation</h2>
                        <!-- Bloc 1 -->
                        <div class="row mt16 o_settings_container" name="background_theme_settings">
                            <div class="col-12 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <label string="Background Image" for="bg_image"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <field name="bg_image" widget="image"/>
                                </div>
                            </div>
                        </div>
                        <!-- Bloc 1 -->
                        
                        <!-- Bloc 2 -->
                        <!-- NavBar txt Color -->
                        <div class="col-12 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="nav_ft_color" widget="color"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Navbar text Color" for="nav_ft_color"/>
                                <div class="text-muted">The color of the navigation bar text</div>
                            </div>
                        </div>
                        <!-- NavBar bg Color -->
                        <div class="col-12 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="nav_bg_color" widget="color"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Navbar Color" for="nav_bg_color"/>
                                <div class="text-muted">The color of the navigation bar</div>
                            </div>
                        </div>
                        <!-- Button hover color -->
                        <div class="col-12 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="btn_hover_color" widget="color"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Hover Color" for="btn_hover_color"/>
                                <div class="text-muted">The color of the button when you hover it</div>
                            </div>
                        </div>
                        <!-- Backgroudn color -->
                        <div class="col-12 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="bg_color" widget="color"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Background Color" for="bg_color"/>
                                <div class="text-muted">The color of the main menu background</div>
                            </div>
                        </div>
                        <!-- Bloc 2 -->
                    </div>
                </div>
            </xpath>
      </field>
    </record> 
  </data>
</odoo>