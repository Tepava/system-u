<odoo>
  <data>
    <!-- Form -->
    <record id="view_picking_form_with_bill_of_loading" model="ir.ui.view">
      <field name="name">stock.picking.form.with.bill.of.loading</field>
      <field name="model">stock.picking</field>
      <field name="inherit_id" ref="stock.view_picking_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='move_ids_without_package']/tree" position="inside">
          <field name="lst_price" optional="show" attrs="{'readonly': [('state', '=', 'done')]}"/>
          <field name="weight" optional="show"/>
          <field name="volume" optional="show"/>
          <field name="total_weight" optional="show"/>
          <field name="total_volume" optional="show"/>
          <field name="valuation" optional="show"/>
        </xpath>
        <xpath expr="//field[@name='move_ids_without_package']" position="after">
          <group name="total" col="6">
            <group colspan="4">
            </group>
            <group class="oe_subtotal_footer oe_right" colspan="2" name="fees_amount">
              <field name="total_weight"/>
              <field name="total_volume"/>
              <field name="valuation"/>
            </group>
            <div class="oe_clear"/>
          </group>
        </xpath>
      </field>
    </record>
  </data>
</odoo>